<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shgitemrel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resolution"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:fontFamily="@font/sans_bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#252222"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/sans"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:fontFamily="@font/sans_bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Are you satisfied with the Resolution Provided?"
                    android:textColor="#252222"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:fontFamily="@font/sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/viewBg"
                android:background="@drawable/rectangle_white"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fullText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fully"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rectangle_filed"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/sans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/partialText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Partly"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/sans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/notText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Not"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/sans_bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/partialLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Do you want to ?(Compliant)"
                    android:textColor="#252222"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:fontFamily="@font/sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/viewBg"
                android:background="@drawable/rectangle_white"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/closeText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Close"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rectangle_filed"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/sans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/escalateText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Escalate"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/sans_bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/itemsCard"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:elevation="50dp"
                app:cardCornerRadius="5dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/itemsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/geodetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Geo Details"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/sans_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description Details"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sans_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/itemsReportCard"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:elevation="50dp"
                app:cardCornerRadius="5dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/itemsReportImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/geodetailsReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Geo Details"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/sans_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/descriptionReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description Details"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sans_bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/itemsAdd"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:background="@drawable/dotted"
                android:elevation="50dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/dotted">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:tint="@color/colorPrimary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
